Import('env')
env = env.Clone()
from glob import glob
from os.path import join, basename

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "../src"

env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)

# ------------------------------------------------------------------------------
# Include Paths
#---------------------------------------------------------------------------------


#-------------------------------------------------------------------------------
# APIs needed to build the SNS SAM PED APIs
#-------------------------------------------------------------------------------

# Should be first
env.RequirePublicApi([
  'SNS_SAM_PED'
  ])

env.RequirePublicApi([
  'MPROC',
  ], area='CORE')

#-------------------------------------------------------------------------------
# Sources, libraries
#-------------------------------------------------------------------------------

# Construct the list of source files by looking for *.c
SNS_SAM_PED_C_SOURCES = ['${BUILDPATH}/' + basename(fname)
                 for fname in glob(join(env.subst(SRCPATH), '*.c'))]

# Add our library to the following build tags:
#   QMIMSGS_ADSP for ADSP / LPASS images
#   QMIMSGS_MPSS for MPSS image
env.AddLibrary (['QMIMSGS_ADSP','QMIMSGS_MPSS'], 
                '${BUILDPATH}/qmimsgs_sns_sam_ped', [SNS_SAM_PED_C_SOURCES])

# Load test units
env.LoadSoftwareUnits()
