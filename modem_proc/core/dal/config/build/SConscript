Import('env')
import os, glob
env = env.Clone()

if env.GetUsesFlag('USES_MBA') is True:
      script_fname = "mba.script"
      env.SConscript(script_fname, exports='env')
else:
   script_fname = "modem.script"
   env.SConscript(script_fname, exports='env')

