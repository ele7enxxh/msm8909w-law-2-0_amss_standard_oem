env.AddLibrary(['RPM_IMAGE','WCN_IMAGE','CBSP_WCN_IMAGE','CORE_GSS','MODEM_PROC','CORE_QDSP6_SW'],'${BUILDPATH}/tmc_hal',TMC_HAL_SRC)



