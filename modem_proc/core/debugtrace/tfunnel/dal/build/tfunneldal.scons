Import('env')

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "../src"

env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)




#-------------------------------------------------------------------------------
# Internal depends within CoreBSP
#-------------------------------------------------------------------------------
CBSP_APIS = [
   'DEBUGTRACE',
   'SERVICES',
   'HAL',
   'DAL'
]


env.RequirePublicApi(CBSP_APIS)
env.RequireRestrictedApi(CBSP_APIS)
env.RequireProtectedApi(['DEBUGTRACE'])


#-------------------------------------------------------------------------------
# Sources, libraries
#-------------------------------------------------------------------------------
TFUNNEL_DAL_SRC = ['${BUILDPATH}/DalTFunnel.c']

env.AddLibrary(['MODEM_IMAGE','RPM_IMAGE','CORE_QDSP6_SW','WCN_IMAGE','CBSP_WCN_IMAGE','CORE_GSS'],'${BUILDPATH}/tfunnel_dal',TFUNNEL_DAL_SRC)


if 'USES_DEVCFG' in env:
   DEVCFG_IMG = ['DAL_DEVCFG_IMG']
   env.AddDevCfgInfo(DEVCFG_IMG, 
   {
      'soc_xml' : ['${BUILD_ROOT}/core/debugtrace/tfunnel/config/8974/daltfunnel.xml',
                   '${BUILD_ROOT}/core/debugtrace/tfunnel/config/8974/tfunnel_config.c'],
      'soc_xml' : ['${BUILD_ROOT}/core/debugtrace/tfunnel/config/8916/daltfunnel.xml',
                   '${BUILD_ROOT}/core/debugtrace/tfunnel/config/8916/tfunnel_config.c'],
      'soc_xml' : ['${BUILD_ROOT}/core/debugtrace/tfunnel/config/8936/daltfunnel.xml',
                   '${BUILD_ROOT}/core/debugtrace/tfunnel/config/8936/tfunnel_config.c'],
	  'soc_xml' : ['${BUILD_ROOT}/core/debugtrace/tfunnel/config/8909/daltfunnel.xml',
                   '${BUILD_ROOT}/core/debugtrace/tfunnel/config/8909/tfunnel_config.c'],
	   'soc_xml' : ['${BUILD_ROOT}/core/debugtrace/tfunnel/config/8952/daltfunnel.xml',
                   '${BUILD_ROOT}/core/debugtrace/tfunnel/config/8952/tfunnel_config.c'],
   })
