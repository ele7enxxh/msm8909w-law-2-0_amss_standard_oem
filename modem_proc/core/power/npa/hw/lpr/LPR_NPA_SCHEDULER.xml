<LPRDefinition>
  <!-- The LPR defintion for NPA -->
  <LPR Name="npa_scheduler" CoreMask="0xFFFFFFFF" ProfileFreq="499000">
    <!-- Shutdown LPRM -->
    <Mode
      Name="fork"
      Order="FIRST"
      Dependency="cxo"
      PowerSavings="0,500"
      EnterLat="75000"
      ExitLat="39000"
      EnterFn="npa_scheduler_lpr_enter"
      ExitFn="npa_scheduler_lpr_exit"
      Backoff="39000">
    </Mode> 
  </LPR>
</LPRDefinition>

