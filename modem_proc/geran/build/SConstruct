#env = Environment(ENV = os.environ, platform = 'posix')
#env = Environment(ENV = os.environ, platform = 'cygwin')

env = env.Clone()

#------------------------------------------------------------------------------
# Set global variables and defaults
#------------------------------------------------------------------------------
#t_start = time.clock()

